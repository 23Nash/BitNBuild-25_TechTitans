{
  "manifest_version": 3,
  "name": "Review Radar",
  "version": "1.0",
  "description": "A Chrome extension to analyze and visualize review sentiments.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icons/icon.svg",
      "48": "src/assets/icons/icon.svg",
      "128": "src/assets/icons/icon.svg"
    }
  },
  "icons": {
    "16": "src/assets/icons/icon.svg",
    "48": "src/assets/icons/icon.svg",
    "128": "src/assets/icons/icon.svg"
  }
}